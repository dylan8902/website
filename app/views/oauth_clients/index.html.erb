<% provide(:title, "OAuth Clients") %>
<% provide(:description, "A list of my OAuth clients.") %>

<h1>OAuth Clients</h1>

<section class="row">
	<article class="col-md-8">

		<nav class="btn-group">

			<% css = "btn" %>
			<% css += " btn-primary" if params[:order].nil? %>
			<%= link_to "A-Z", request.path, class: css %>
			<% css = "btn" %>
			<% css += " btn-primary" if params[:order] == "created_at DESC" %>
			<%= link_to "Most Recent", request.path + "?order=created_at%20DESC", class: css %>
		</nav>

		<table class="table table-striped">
			<% @oauth_clients.each do |oauth_client| %>
			<tr>
				<td><%= link_to oauth_client.name, oauth_client_path(oauth_client) %></td>
			</tr>
			<% end %>
		</table>
		<%= paginate @oauth_clients %>
	</article>
	<article class="col-md-4">
		<h3>New OAuth Client</h3>
		<%= render 'form' %>
	</article>
</section>

