<%= form_for(@user) do |f| %>

	<div class="form-group<%= " has-error" if errors_for @user, :nickname %>">
		<%= f.label :nickname, class: "control-label" %>
    <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
    <span class="help-block"><%= errors_for @user, :nickname %></span>
	</div>

	<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
