<div class="header clearfix">
  <h3 class="text-muted">Team Quiz</h3>
</div>

<div class="jumbotron">
  <h1>Welcome</h1>
  <p class="lead">Time to test your knowledge</p>

  <%= form_for(@user) do |f| %>
  	<div class="form-group<%= " has-error" if errors_for @user, :nickname %>">
      <%= f.text_field :nickname, autofocus: true, class: "form-control input-lg", required: true, placeholder: "Nickname" %>
      <span class="help-block"><%= errors_for @user, :nickname %></span>
  	</div>

  	<%= f.submit "Start Quiz", class: "btn btn-success" %>
  <% end %>

</div>
