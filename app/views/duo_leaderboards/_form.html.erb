<%= form_for(@leaderboard) do |f| %>

	<div class="form-group<%= " has-error" if errors_for @leaderboard, :name %>">
		<%= f.label :name, class: "control-label" %>
		<%= f.text_field :name, class: "form-control" %>
		<span class="help-block"><%= errors_for @leaderboard, :name %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @leaderboard, :url %>">
		<%= f.label :url, class: "control-label" %>
		<%= f.text_field :url, class: "form-control" %>
		<span class="help-block"><%= errors_for @leaderboard, :url %></span>
	</div>
	<div class="actions"><%= f.submit "Submit", class: "btn btn-primary" %></div>

<% end %>
