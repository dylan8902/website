<%= form_for([:music, @dj_event]) do |f| %>

	<div class="form-group<%= " has-error" if errors_for @dj_event, :name %>">
		<%= f.label :title, class: "control-label" %>
    	<%= f.text_field :title, autofocus: true, class: "form-control" %>
    	<span class="help-block"><%= errors_for @dj_event, :title %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @dj_event, :location %>">
		<%= f.label :location, class: "control-label" %>
    	<%= f.text_field :location, class: "form-control" %>
    	<span class="help-block"><%= errors_for @dj_event, :location %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @dj_event, :description %>">
		<%= f.label :description, class: "control-label" %>
    	<%= f.text_field :description, class: "form-control" %>
    	<span class="help-block"><%= errors_for @dj_event, :description %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @dj_event, :image %>">
		<%= f.label :image, class: "control-label" %>
    	<%= f.text_field :image, class: "form-control" %>
    	<span class="help-block"><%= errors_for @dj_event, :image %></span>
	</div>
	<div><%= f.submit "Save", class: "btn btn-primary" %></div>
<% end %>