<%= form_for(@project) do |f| %>
  
	<div class="form-group<%= " has-error" if errors_for @project, :title %>">
		<%= f.label :title, class: "control-label" %>
		<%= f.text_field :title, class: "form-control", autofocus: true %>
		<span class="help-block"><%= errors_for @project, :title %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @project, :description %>">
		<%= f.label :description, class: "control-label" %>
		<%= f.text_area :description, class: "form-control" %>
		<span class="help-block"><%= errors_for @project, :description %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @project, :url %>">
		<%= f.label :url, class: "control-label" %>
		<%= f.text_field :url, class: "form-control" %>
		<span class="help-block"><%= errors_for @project, :url %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @project, :online %>">
		<%= f.label :online, class: "control-label" %>
		<%= f.check_box :online %>
		<span class="help-block"><%= errors_for @project, :online %></span>
	</div>
	<div class="actions"><%= f.submit "Submit", class: "btn btn-primary" %></div>

<% end %>