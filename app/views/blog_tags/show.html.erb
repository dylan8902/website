<% provide(:title, "Blog:: Tag:: #{@tag}") %>
<% provide(:description, "Blog posts that are tagged with: #{@tag}") %>

<h1>Tag: <%= @tag.tag.titleize %></h1>
<section class="row">
	<article class="col-md-8">
		<% @blog_posts.each do |blog_post| %>
			<%= render "blog_posts/blog_post", blog_post: blog_post %>
		<% end %>
	</article>

	<%= render "blog_posts/navigation" %>

</section>

<%= paginate @blog_posts %>