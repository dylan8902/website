<% provide(:title, "Episode:: #{@episode.title}") %>
<% provide(:description, "I watched #{@episode.title}. #{@episode.description}") %>
<% provide(:image, @episode.image) %>

<h1>Episodes</h1>
<ol class="breadcrumb">
  <li><%= link_to 'Episodes', episodes_path %></li>
  <li class="active"><%= @episode.title %></li>
<% if current_user %>
	<li><%= link_to 'Your Statistics', user_episodes_stats_path(current_user) %></li>
	<li><%= link_to 'My Statistics', episodes_stats_path %></li>
<% else %>
	<li><%= link_to 'My Statistics', episodes_stats_path %></li>
<% end %>
</ol>

<h2><%= @episode.title %></h2>
<img src="<%= @episode.image %>" alt="<%= @episode.title %>" class="thumbnail">
<p><%= @episode.description %></p>
<%= link_to 'Back', episodes_path %>
