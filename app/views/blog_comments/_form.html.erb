<%= form_for(@comment, url: @url, method: @method) do |f| %>
  
	<div class="form-group<%= " has-error" if errors_for @comment, :name %>">
		<%= f.label :name, class: "control-label" %>
		<% name = current_user.name if current_user %>
		<%= f.text_field :name, class: "form-control", required: true, value: name %>
		<span class="help-block"><%= errors_for @comment, :name %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @comment, :email %>">
		<%= f.label :email, class: "control-label" %>
		<% email = current_user.email if current_user %>
		<%= f.email_field :email, class: "form-control", required: true, value: email %>
		<span class="help-block"><%= errors_for @comment, :email %></span>
	</div>
	<div class="form-group<%= " has-error" if errors_for @comment, :comment %>">
		<%= f.label :comment, class: "control-label" %>
		<%= f.text_area :comment, class: "form-control", required: true %>
		<span class="help-block"><%= errors_for @comment, :comment %></span>
	</div>
	<div class="actions"><%= f.submit "Submit", class: "btn btn-primary" %></div>

<% end %>
