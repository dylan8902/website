<% provide(:title, "Cycling:: Stats") %>
<% provide(:description, "Statistics on when I go cycling.") %>

<h1>Cycling</h1>
<ol class="breadcrumb">
	<li><%= link_to 'Cycling', cycling_events_path %></li>
	<li class="active">Statistics</li>
	<li><%= link_to 'Map', cycling_events_map_path %></li>
</ol>

<section class="row">
	<article class="col-md-4 col-sm-6">
		<div class="well">
			<p>Total Distance</p>
			<p style="font-size:300%"><%= solid_icon("road") %> <%= number_with_delimiter @stats[:total_distance] %>m</p>
		</div>
	</article>
	<article class="col-md-4 col-sm-6">
		<div class="well">
			<p>Total Time</p>
			<p style="font-size:300%"><%= solid_icon("stopwatch") %> <%= Time.at(@stats[:total_time]).gmtime.strftime('%-dd %kh %-Mm %-Ss') %></p>
		</div>
	</article>
	<article class="col-md-4 col-sm-6">
		<div class="well">
			<p>Average Speed</p>
			<p style="font-size:300%"><%= solid_icon("rocket") %> <%= number_with_precision(@stats[:average_speed], precision: 3, delimiter: '.') %>m/s</p>
		</div>
	</article>
</section>

<%= link_to 'Back', cycling_events_path %>
