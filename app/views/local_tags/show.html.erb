<% provide(:title, "Local Tags") %>
<% provide(:description, "Create a new tag where you are describing what you can see or do here or whatever.") %>
<% provide(:map, "map") %>

<h1>Local Tags</h1>

<section class="row">
	<article class="col-md-6">
		<div id="map" style="width:100%;height:400px"></div>
	</article>
	<article class="col-md-6">
		<h2><%= @local_tag.title %></h2>
	<% unless @local_tag.user.nil? %>
		<p><%= gravatar @local_tag.user.email, 20 %> <%= @local_tag.user.name %> - <%=timestamp @local_tag.created_at %></p>
	<% end %>
		<h3><%= @local_tag.description %></h3>
	<% if user_signed_in? and @local_tag.user.id == current_user.id %>
		<%= link_to 'Edit', edit_local_tag_path(@local_tag), class: "btn btn-warning" %>
	<% end %>
	</article>
</section>

<%= link_to 'Back', local_tags_path %>

<%= render 'common/map_point' %>
