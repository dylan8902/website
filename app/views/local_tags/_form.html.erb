<%= form_for(@local_tag) do |f| %>
<div class="form-group<%= " has-error" if errors_for @local_tag, :title %>">
	<%= f.label :title, class: "control-label" %>
	<%= f.text_field :title, class: "form-control", autofocus: true %>
	<span class="help-block"><%= errors_for @local_tag, :title %></span>
</div>
<div class="form-group<%= " has-error" if errors_for @local_tag, :description %>">
	<%= f.label :description, class: "control-label" %>
	<%= f.text_area :description, class: "form-control", rows: 10 %>
	<span class="help-block"><%= errors_for @local_tag, :description %></span>
</div>
<div style="display:none">
	<%= f.text_field :lat %>
	<%= f.text_field :lng %>
</div>
<div class="form-actions">
	<%= f.submit "Save", class: "btn btn-primary" %>
	<%= link_to "Back", local_tags_path, class: "btn btn-danger" %>
</div>
<% end %>
