<% provide(:title, "Stream") %>
<% provide(:description, "Real-time feed of all things me. A scrollaable history of all my data.") %>

<h1>Stream</h1>
<section class="row">
<% @stream.each do |post| %>
	<article class="col-md-6">
		<h3><%= post[:title] %></h3>
		<p><%= post[:description] %></p>
		<small><%= timestamp post[:created_at]%></small>
	</article>
<% end %>
	
</section>
<%= paginate @stream %>
